# Market Anomaly Detection Engine - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
APP_NAME=Market Anomaly Detection Engine
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///./data/alerts.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/market_anomaly_db

# ============================================
# MODEL CONFIGURATION
# ============================================
MODEL_PATH=data/models/isolation_forest.pkl
AUTOENCODER_PATH=data/models/autoencoder.h5
LSTM_PATH=data/models/lstm_detector.h5

# Model parameters
CONTAMINATION=0.05
N_ESTIMATORS=100
RANDOM_STATE=42

# ============================================
# MLFLOW EXPERIMENT TRACKING
# ============================================
MLFLOW_TRACKING_URI=file:///./mlruns
MLFLOW_EXPERIMENT_NAME=market-anomaly-detection
MLFLOW_ARTIFACT_LOCATION=./mlruns
MLFLOW_ENABLE_UI=true
MLFLOW_UI_PORT=5000

# ============================================
# DATA SOURCES
# ============================================
DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed

# yfinance settings
YFINANCE_TIMEOUT=10
YFINANCE_MAX_RETRIES=3

# ============================================
# DETECTION THRESHOLDS
# ============================================
VOLUME_ZSCORE_THRESHOLD=3.0
PRICE_CHANGE_THRESHOLD=10.0
VOLATILITY_RATIO_THRESHOLD=1.5
WASH_TRADING_CORRELATION_THRESHOLD=0.3

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# ============================================
# MONITORING
# ============================================
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.05
PERFORMANCE_TRACKING_ENABLED=true

# ============================================
# GPU (Optional)
# ============================================
USE_GPU=false
GPU_MEMORY_LIMIT=4096  # MB

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_ENABLED=false
API_KEY=your-api-key-here
